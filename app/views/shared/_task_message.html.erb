<!-- タスクの作成に失敗した時のエラーメッセージ -->
<!-- 部分テンプレートとしてまとめておく -->
<!-- エラーの個数と内容を表示する. -->
<% if @task.errors.any? %>
<div class="error_explanation">
  <div class="alert alert-danger">
    The form contains <%= pluralize(@task.errors.count, "error") %>
  </div>
  <ul>
    <% @task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
